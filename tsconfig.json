{
    "compilerOptions": {
        "module": "Node16",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "Node16",
        "noEmit": true,
        "isolatedModules": true,
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "declaration": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}